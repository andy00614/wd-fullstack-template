{
	"name": "wd-fullstack-template",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "next build",
		"check": "biome check .",
		"check:unsafe": "biome check --write --unsafe .",
		"check:write": "biome check --write .",
		"validate": "bun run typecheck && bun run check && bun run test:run",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:push": "drizzle-kit push",
		"db:studio": "drizzle-kit studio",
		"db:query": "bun run scripts/db-query.ts",
		"mcp": "bun run scripts/mcp-presets.ts",
		"screenshot": "bun run scripts/screenshot.ts",
		"dev": "next dev --turbo",
		"preview": "next build && next start",
		"start": "next start",
		"test": "vitest",
		"test:run": "vitest run",
		"test:coverage": "vitest run --coverage",
		"analyze": "ANALYZE=true bun run build",
		"typecheck": "tsc --noEmit",
		"knip": "knip",
		"e2e": "playwright test",
		"e2e:ui": "playwright test --ui",
		"prepare": "husky"
	},
	"dependencies": {
		"@hookform/resolvers": "^5.2.2",
		"@radix-ui/react-avatar": "^1.1.11",
		"@radix-ui/react-label": "^2.1.8",
		"@radix-ui/react-select": "^2.2.6",
		"@radix-ui/react-slot": "^1.2.4",
		"@supabase/ssr": "^0.8.0",
		"@supabase/supabase-js": "^2.86.0",
		"@t3-oss/env-nextjs": "^0.12.0",
		"@tanstack/react-query": "^5.90.11",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"drizzle-orm": "^0.41.0",
		"framer-motion": "^12.23.24",
		"lucide-react": "^0.555.0",
		"next": "^15.2.3",
		"postgres": "^3.4.4",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"react-hook-form": "^7.67.0",
		"rough-notation": "^0.5.1",
		"sonner": "^2.0.7",
		"tailwind-merge": "^3.4.0",
		"zod": "^4.1.13",
		"zustand": "^5.0.8"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.5",
		"@next/bundle-analyzer": "^16.0.5",
		"@playwright/test": "^1.57.0",
		"@tailwindcss/postcss": "^4.0.15",
		"@types/node": "^20.14.10",
		"@types/react": "^19.0.0",
		"@types/react-dom": "^19.0.0",
		"@vitest/coverage-v8": "^4.0.14",
		"dotenv": "^17.2.3",
		"drizzle-kit": "^0.31.7",
		"husky": "^9.1.7",
		"knip": "^5.70.2",
		"lint-staged": "^16.2.7",
		"postcss": "^8.5.3",
		"tailwindcss": "^4.0.15",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5.8.2",
		"vitest": "^4.0.14"
	},
	"ct3aMetadata": {
		"initVersion": "7.40.0"
	},
	"lint-staged": {
		"*.{ts,tsx,js,jsx}": [
			"biome check --write"
		]
	}
}
